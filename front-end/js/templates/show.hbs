
<div class="progress progress-striped browse-item-rating-progress topbar" id="browse-show-rating-progress">
  
  <div class="progress-bar {{unbound progressType}}" style="width: {{unbound ratingLength}}%">
    <div id="browse-show-rating">{{ratingText}}</div>
  </div>

</div>

<div class="container">

<div class="row">
    <div class="col-lg-4">
      <img src="../media/posters/{{unbound poster}}" class="detailsimg"/>
    </div>
    <div class="col-lg-8 columns">
      <div class="row">
        <div class="col-lg-8 columns">
          <h1>{{ name }}</h1>
        </div>
      </div>
      <div class="row">
        
      </div>
      <div class="row">
        <div class="col-lg-8 columns">
          <p>{{summary}}</p>
        </div>
      </div>
      {{#if isNotWatched}}
        <a class="tiny button radius" {{action follow}}>Add to watchlist</a>
      {{/if}}
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 columns">
      <ul class="inline-list">
      
      </ul>
    </div>
  </div>
  <div class="row">&nbsp;</div>
  <div class="row">&nbsp;</div>

<h2>Episodes</h2>


<table class="table table-hover table-responsive datatable">
  <thead>
    <th>Season</th>
    <th>Episode</th>
    <th>Name</th>
    <th>Synopsis</th>
    <th>Aired</th>
    <th>Watched</th>
  </thead>
  <tbody>

    {{#each episode in episodes itemController="episode"}}
    {{#if episode.hasSeen }}
      <tr class="episode-watched" id="{{unbound episode.id}}">
        <td>{{ episode.season }}</td>
        <td>{{ episode.episodeNum }}</td>
        <td>{{ episode.name }}</td>
        <td>{{ episode.summary }}</td>
        <td>{{ episode.date }}</td>
      {{else}}
        <tr id="{{unbound episode.id}}">
        <td {{action watchedEpisode}}>{{ episode.season }}</td>
        <td {{action watchedEpisode}}>{{ episode.episodeNum }}</td>
        <td {{action watchedEpisode}}>{{ episode.name }}</td>
        <td {{action watchedEpisode}}>{{ episode.summary }}</td>
        <td {{action watchedEpisode}}>{{ episode.date }}</td>
      {{/if}}
      </tr>
    {{/each}}

  </tbody>
</table>



