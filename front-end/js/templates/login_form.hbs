<div class="row">
	<div class="col-lg-12">
		<h2>Do you have an account...</h2>
	</div>
</div>
<div class="row">
	<form class="form-inline" {{action 'authenticate' on='submit'}}>
  	<div class="col-lg-5 loginusername-area">
  		{{input value=username type="text" placeholder="E-mail" value=identification}}
  	</div>
</div>
<div class="row">
  	<div class="col-lg-5 loginpw-area">
  		{{input value=password type="password" placeholder="Password" value=password}}
  	</div>
</div>
<div class="row">
  	<div class="col-lg-5">
  		{{#if loginFailed }}
  		<div class="alert alert-danger alert-dismissable">
  			<p>Login failed :( Try again?</p>
  		</div>
  		{{/if}}
  		<button class="btn btn-info" {{action "authenticate"}}>Log in</button>
  	</div>
</form>
</div>